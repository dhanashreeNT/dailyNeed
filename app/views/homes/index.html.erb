<!-- Services Section -->
    <section id="services">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">We Provide</h2>
                    <h3 class="section-subheading text-muted">Provide different benefits for you FREE.</h3>
                </div>
            </div>
            <div class="row text-center">
                <div class="col-md-4">
                    <span class="fa-stack fa-4x">
                        <i class="fa fa-circle fa-stack-2x text-primary"></i>
                        <i class="fa fa-money fa-stack-1x fa-inverse"></i>
                    </span>
                    <h4 class="service-heading">Where you spend money?</h4>
                    <p class="text-muted">Looking for an Expense Tracker? 
                    Finding it hard to keep track of your daily expenses?</p>
                    <p class="text-muted">Use KeepRecord to make your life easier.</p>
                </div>
                <div class="col-md-4">
                    <span class="fa-stack fa-4x">
                        <i class="fa fa-circle fa-stack-2x text-primary"></i>
                        <i class="fa fa-files-o fa-stack-1x fa-inverse"></i>
                    </span>
                    <h4 class="service-heading">Generate Reports</h4>
                    <p class="text-muted">You can generate and download monthly or daily reports for keeping track in hard code format</p>
                </div>
                <div class="col-md-4">
                    <span class="fa-stack fa-4x">
                        <i class="fa fa-circle fa-stack-2x text-primary"></i>
                        <i class="fa fa-users fa-stack-1x fa-inverse"></i>
                    </span>
                    <h4 class="service-heading">Invite People</h4>
                    <p class="text-muted">You can invite people for adding there daily expenses in your account</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Create account section -->
    <section id="create_account">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Create Account</h2>
                    <h3 class="section-subheading text-muted">Its FREE</h3>
                </div>
            </div>
            <div class="row text-center">
                <div class="col-lg-3">
                </div>
                
                <div class="col-lg-6">
                    <%= simple_form_for(User.new, :as => "user", :url=>user_registration_path, :role=> 'form',:html => { :method => :post, :autocomplete => "off"}) do |f|  %>

                        <div class="row">
                            <div class="form-group">
                                <%= text_field_tag :account, nil, :class => "form-control",:placeholder => "Your account Name *", :required => true %>
                               
                            </div>
                            <div class="form-group">
                                <%= f.input :email, :label =>false, required: true, input_html: { class: 'form-control' },:placeholder => "Your Email *" %>
                            </div>
                            <div class="form-group">
                                <%= f.input :password, :label =>false, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable), input_html: {class: 'form-control'}, :placeholder => "Your password *" %>
                            </div>
                            <div class="form-group">
                                <%= f.input :password_confirmation, :label =>false, required: true,  input_html: {class: 'form-control'}, :placeholder => "Retype your password *" %>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-xl">Create Account</button>
                            </div>
                        </div>
                    <% end %>
                </div>

                 <div class="col-lg-3">
                </div>
            </div>
        </div>
    </section>
    
    <!-- Sign In section -->
    <section id="sign_in">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Sign In</h2>
                    <h3 class="section-subheading text-muted">Manage your account</h3>
                </div>
            </div>
            <div class="row text-center">
                <div class="col-lg-3">
                </div>
                
                <div class="col-lg-6">
                    <%= simple_form_for(:user, :url => user_session_path) do |f| %>
                        <div class="row">
                            <div class="form-group">
                                <%= f.input :email, :label =>false, required: true,  input_html: {class: 'form-control'}, :placeholder => "Your Email *" 
                                %>
                            </div>
                            <div class="form-group">
                                <%= f.input :password, :label =>false, required: true,  input_html: {class: 'form-control'}, :placeholder => "Your Password *" 
                                %>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-xl">Sign In</button>
                            </div>
                        </div>
                    <% end %>
                </div>

                 <div class="col-lg-3">
                </div>
            </div>
        </div>
    </section>
    
    
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Contact Us</h2>
                    <h3 class="section-subheading text-muted">Feel free to tell us your ideas.</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <form name="sentMessage" id="contactForm" novalidate>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Your Name *" id="name" required data-validation-required-message="Please enter your name.">
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control" placeholder="Your Email *" id="email" required data-validation-required-message="Please enter your email address.">
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                    <input type="tel" class="form-control" placeholder="Your Phone *" id="phone" required data-validation-required-message="Please enter your phone number.">
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <textarea class="form-control" placeholder="Your Message *" id="message" required data-validation-required-message="Please enter a message."></textarea>
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-lg-12 text-center">
                                <div id="success"></div>
                                <button type="submit" class="btn btn-xl">Send Message</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
